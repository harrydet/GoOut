<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff4e4e4e" />

            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape android:shape="rectangle" >
            <solid android:color="#ff1e92e9" />

            <corners
                android:radius="10dp" />
        </shape>
    </item>
</layer-list>